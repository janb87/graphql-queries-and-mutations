datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id         Int        @id @default(autoincrement())
  title      String
  content    String?
  published  Boolean    @default(false)
  author     User?
  categories Category[]
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  posts   Post[]
  profile Profile?
}


model Profile {
  id   Int    @id @default(autoincrement())
  bio  String @unique
  user User
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[]
}